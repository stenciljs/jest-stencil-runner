{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h.Fragment",
    "lib": ["dom", "es2022"],
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowUnreachableCode": false,
    "noUnusedParameters": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
